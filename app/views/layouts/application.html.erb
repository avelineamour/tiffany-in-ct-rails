<!DOCTYPE html>
<html>
  <head>
    <title>Tiffany In Connecticut</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Corben|EB+Garamond" rel="stylesheet">
  </head>

  <body>
    <div class="background">
      <img src="<%= asset_path('tiffanybackground.jpeg') %>" class='background'>
   <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
     <div class="container">
       <div class="wrapper">
         <nav class="clearfix">
         <div class="navbar-header">
         <a class="navbar-brand" href="<%= root_url %>"/>Home </a>
         <a class="navbar-brand" href="<%= about_url %>"/>About </a>
         <a class="navbar-brand" href="<%= index_url %>"/>Index </a>
         <% if @user %>
             <a class="navbar-brand" href="<%= logout_url %>"/>Log Out </a>
         <% else %>
           <a class="navbar-brand" href="<%= new_user_url %>"/>Sign Up </a>
           <a class="navbar-brand" href="<%= signin_url %>"/>Sign In </a>
          <% end %>
        </div>
      </nav>
       </div>
       <div class="navbar-collapse collapse">
         <ul class="nav navbar-nav">

         </ul>
       </div><!--/.nav-collapse -->
     </div>
   </div>

   <div class="container" role="main">
     <div></div>
    <%= yield %>
    </div>
    </div>
  </body>
</html>
