<div class='site_container'>
  <%= image_tag @window.image.url(:large) %><br>
</div>
<div class='info'>
  <h1><%= "#{@window.name}" %></h1><br>
  <h2><%= "#{@window.year_created}" %></h2><br>
  <h2><%= "#{@window.dedication}" %></h2><br>
  <h2><%= "#{@window.window_info}" %></h2><br>

  <% if @user.site_admin? %>
  <%= link_to('Add a window to your site', new_user_window_path(current_user, @window)) %>
  <% end %>
</div>
